# Servidor
PORT=3000

# Base de Datos
MONGO_URI=mongodb://localhost:27017/snyk_reports_db

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Snyk Configuration (OBLIGATORIO)
# Obtener token desde: https://app.snyk.io/account
# IMPORTANTE: Este token es REQUERIDO para que los escaneos funcionen
# Sin este token, la aplicación no iniciará
SNYK_TOKEN=9c883f8e-8e6c-44b3-b22d-773c6f41e552

# Cron Job Configuration
# Habilitar/deshabilitar escaneos automáticos
ENABLE_CRON=true

# Expresión cron para programar escaneos
# Formato: "minuto hora día mes día-semana"
# Ejemplos:
#   0 2 * * *     - Todos los días a las 2:00 AM
#   0 */6 * * *   - Cada 6 horas
#   0 9 * * 1     - Todos los lunes a las 9:00 AM
#   */30 * * * *  - Cada 30 minutos
CRON_SCHEDULE=0 2 * * *
